// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String?
  email       String?      @unique
  createdAt   DateTime     @default(now()) @map(name: "created_at")
  updatedAt   DateTime     @updatedAt @map(name: "updated_at")
  favorites   County[]
  submissions Submission[]
  profile     Profile?

  @@map(name: "users")
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model Language {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  native      String    @unique
  a3          String    @unique @db.VarChar(3)
  parameterId Int
  parameter   Parameter @relation(fields: [parameterId], references: [id])
}

model Country {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  native      String    @unique
  a2          String    @unique @db.VarChar(2)
  parameterId Int
  parameter   Parameter @relation(fields: [parameterId], references: [id])
}

model County {
  id        Int     @id @default(autoincrement())
  code      String? @unique
  name      String
  text      String?
  longitude Float
  latitude  Float
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int?
}

model Category {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  text   String   @unique
  factor Factor[]
}

model Factor {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  text       String      @unique
  categoryId Int
  category   Category    @relation(fields: [categoryId], references: [id])
  Parameter  Parameter[]
}

model Parameter {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  text      String     @unique
  factor    Factor     @relation(fields: [factorId], references: [id])
  factorId  Int
  variable  String     @unique
  languages Language[]
  countries Country[]
}

model Submission {
  id      Int   @id @default(autoincrement())
  owner   User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
}
